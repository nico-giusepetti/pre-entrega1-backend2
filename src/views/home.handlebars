
<h1 class="text-center my-4">Mi Tienda de Accesorios</h1>

<div class="container">
    <div class="row">
        {{#each productos}}
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary">{{this.title}}</h5>
                        <p class="card-text text-muted">{{this.description}}</p>
                        <p class="card-text"><strong>$ {{this.price}}</strong></p>
                        <a href="#" class="btn btn-success w-100">Comprar</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<div class="d-flex justify-content-center mt-4">
    <div>
        {{#if hasPrevPage}}
            <a href="/products?page={{prevPage}}" class="btn btn-outline-primary mx-2">Anterior</a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="/products?page={{nextPage}}" class="btn btn-outline-primary mx-2">Siguiente</a>
        {{/if}}
    </div>
</div>

